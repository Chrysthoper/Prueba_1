<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="5dp"
        android:background="#ff6e6e6e"
        android:id="@+id/lyTransProgramadaAdapter">

        <ImageView
            android:id="@+id/ivCategoriaTransProgramadaAdapter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:padding="5dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="OCT 10"
            android:id="@+id/tvFechaSiguienteTransProgramadaAdapter"
            android:textSize="10dp"
            android:singleLine="false"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="OCT 10"
            android:id="@+id/tvCostoTransProgramadaAdapter"
            android:textSize="10dp"
            android:singleLine="false"
            android:layout_weight="5"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="left|center_vertical" />

    </LinearLayout>

</LinearLayout>