<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/grid_border"
        android:id="@+id/lyTransAdapter1">

        <ImageView
            android:id="@+id/ivCategoriaAdapter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/forma_circulo1"
            android:padding="5dp"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/tvDescripcionAdapter"
                        android:textSize="13dp"
                        android:gravity="center_vertical"
                        android:layout_weight="2"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="Medium Text"
                        android:layout_margin="2dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nota"
                    android:id="@+id/tvNotaAdapter"
                    android:layout_weight="2"
                    android:textSize="10dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#ff6e6e6e">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivCuentaAdapter"
                        android:src="@mipmap/credito"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="OCT 10"
                        android:id="@+id/tvFechaAdapter"
                        android:textSize="10dp"
                        android:singleLine="false"
                        android:layout_weight="3"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="left|center_vertical" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCostoAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$ 100000000.00"
                    android:textSize="11dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/grid_border"
        android:id="@+id/lyTransAdapter2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/border">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ff6e6e6e"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivCuenta1TransAdapter2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/credito"
                    android:padding="5dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageView3"
                    android:src="@mipmap/transfer" />

                <ImageView
                    android:id="@+id/ivCuenta2TransAdapter2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/monedas"
                    android:padding="5dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMontoTransAdapter2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="$ 100000000.00"
                android:textSize="11dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="2"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvDescTransAdapter2"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="Medium Text"
                    android:layout_margin="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nota"
                    android:id="@+id/tvNotaTransAdapter2"
                    android:layout_weight="2"
                    android:textSize="10dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="right">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10\nN\nO\nV"
                    android:id="@+id/tvFechaTransAdapter2"
                    android:textSize="10dp"
                    android:singleLine="false"
                    android:layout_weight="3"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center"
                    android:background="#ff6e6e6e" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>