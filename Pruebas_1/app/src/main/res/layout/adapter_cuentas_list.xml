<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="5dp"
        android:background="@color/caldroid_black"
        android:id="@+id/lyTransAdapterGroup1">

        <ImageView
            android:id="@+id/ivCuentaAdapterList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="@+id/label"
                    android:id="@+id/tvCuentaDescripcionAdapterList"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:text="$ 00000.00"
                android:id="@+id/tvCuentaTotalAdapterList"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textColor="@android:color/white"
                android:gravity="center_vertical|center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>